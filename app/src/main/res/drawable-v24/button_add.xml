<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="oval"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#EC7B7B" />
            <gradient android:angle="-90" android:startColor="#681D1D" android:endColor="#EC7B7B"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval"  >

            <stroke android:width="1dip" android:color="#EC7B7B" />
            <solid android:color="#CC4747"/>
        </shape>
    </item>
    <item >
        <shape android:shape="oval"  >

            <stroke android:width="1dip" android:color="#EC7B7B" />
            <gradient android:angle="-90" android:startColor="#EC7B7B" android:endColor="#CC4747" />
        </shape>
    </item>
</selector>